# Environment Configuration for Activation Server

# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=intikasir_activation
DB_USER=postgres
DB_PASSWORD=your_password_here

# Security
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# Keys
# Make sure private_key.pem is in ./keys/ folder
# Never commit private key to git!

# Optional: Logging
LOG_LEVEL=info
LOG_FILE=./logs/activation.log

# Optional: Email notifications (for admin alerts)
EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_ADMIN=admin@yourdomain.com

