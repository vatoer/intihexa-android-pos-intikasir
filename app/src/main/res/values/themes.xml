<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.IntiKasir" parent="android:Theme.Material.Light.NoActionBar" />

    <!-- UCrop theme that properly handles system bars -->
    <style name="Theme.IntiKasir.UCrop" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@android:color/black</item>

        <!-- Window flags to prevent overlap -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:fitsSystemWindows">true</item>

        <!-- Background -->
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:colorBackground">@android:color/black</item>

        <!-- Toolbar colors (UCrop will use these) -->
        <item name="colorPrimary">@android:color/black</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="colorAccent">@android:color/holo_green_dark</item>

        <!-- Control colors -->
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/holo_green_dark</item>
        <item name="colorControlHighlight">@android:color/white</item>
    </style>

</resources>